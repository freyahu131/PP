<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.project.pp.parentparadise.lin.ActVipInfoActivity">


    <ImageView
        android:id="@+id/ivActivitiesRecommendImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/lin_test01" />

    <TextView
        android:id="@+id/tvRecommendTitle"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="2018 小騎士馬術冬令營 - 小牛仔也很忙！"
        android:textSize="16sp"
        android:layout_below="@id/ivActivitiesRecommendImage"
        android:layout_marginTop="5dp" />


</RelativeLayout>
