<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
       <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="10dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="#fac627" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#f4d26a" android:endColor="#ea7527"  />
        </shape>
    </item>


    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="10dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="#f5b902" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#ecc449" android:endColor="#ed6307"  />
        </shape>
    </item>

</selector>